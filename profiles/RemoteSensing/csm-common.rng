   <!-- -->
   <define name="csm.distanceUnit">
      <element name="swe:uom">
         <attribute name="code">
            <choice>
               <value>m</value>
               <value>mm</value>
            </choice>
         </attribute>
      </element>
   </define>
   <!-- -->
   <define name="csm.pixelOrDistanceUnit">
      <choice>
         <ref name="csm.distanceUnit"/>
		 <ref name="csm.pixelUnit"/>
      </choice>
   </define>
   <!-- -->
   <define name="csm.pixelUnit">
      <element name="swe:uom">
         <attribute name="xlink:href">
            <value>urn:ogc:def:unit:CSM:pixel</value>
         </attribute>
      </element>
   </define>
   <!-- -->
   <define name="csm.angleUnit">
      <element name="swe:uom">
         <attribute name="code">
            <choice>
               <value>deg</value>
               <value>rad</value>
            </choice>
         </attribute>
      </element>
   </define>
   <!-- -->
   <define name="csm.timeUnit">
      <element name="swe:uom">
         <attribute name="code">
            <choice>
               <value>s</value>
               <value>ms</value>
            </choice>
         </attribute>
      </element>
   </define>
</grammar>
