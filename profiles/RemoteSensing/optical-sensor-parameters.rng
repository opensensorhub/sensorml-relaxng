         <element name="swe:field">
            <attribute name="name">
               <value>k1</value>
            </attribute>
            <element name="swe:Quantity">
               <attribute name="definition">
                  <value>urn:ogc:def:property:CSM:DISTOR_RAD1</value>
               </attribute>
               <optional>
                  <ref name="swe.quality"/>
               </optional> 
               <element name="swe:uom">
                  <attribute name="code">
                     <value>mm-2</value>
                  </attribute>
               </element>
               <ref name="swe.quantityValue"/>
            </element>
         </element>
         <element name="swe:field">
            <attribute name="name">
               <value>k2</value>
            </attribute>
            <element name="swe:Quantity">
               <attribute name="definition">
                  <value>urn:ogc:def:property:CSM:DISTOR_RAD2</value>
               </attribute>
               <optional>
                  <ref name="swe.quality"/>
               </optional> 
               <element name="swe:uom">
                  <attribute name="code">
                     <value>mm-2</value>
                  </attribute>
               </element>
               <ref name="swe.quantityValue"/>
            </element>
         </element>
         <element name="swe:field">
            <attribute name="name">
               <value>k3</value>
            </attribute>
            <element name="swe:Quantity">
               <attribute name="definition">
                  <value>urn:ogc:def:property:CSM:DISTOR_RAD3</value>
               </attribute>
               <optional>
                  <ref name="swe.quality"/>
               </optional> 
               <element name="swe:uom">
                  <attribute name="code">
                     <value>mm-2</value>
                  </attribute>
               </element>
               <ref name="swe.quantityValue"/>
            </element>
         </element>
      </element>
   </define>
   
   
