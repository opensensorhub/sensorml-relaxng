   <!-- xyz Orientation Vector -->  
   <define name="sml-x.NED_orientation">  
      <a:documentation>Orientation relative to local north-east-down</a:documentation> 
      <element name="swe:Vector">
         <optional>
            <attribute name="id">
               <data type="ID"/>
            </attribute>
         </optional>
         <attribute name="definition">
               <value>http://sensorml.com/ont/swe/property/NED_Orientation</value>
         </attribute>
         <attribute name="referenceFrame">
            <data type="anyURI"/>
         </attribute>
         <optional>
            <attribute name="localFrame">
               <data type="anyURI"/>
            </attribute>
         </optional>
         <element name="sml:label">
            <data type="string"/>
         </element>
         <optional>
            <element name="sml:description">
               <data type="string"/>
            </element>
         </optional>
         <!-- x coordinate -->
         <element name="swe:coordinate">
            <attribute name="name">
               <value>trueHeading</value>
            </attribute>
