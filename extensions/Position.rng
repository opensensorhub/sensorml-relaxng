   <!-- LOCATIONS/POSITIONS -->
   
   
  
   <!-- stationary location -->
   <define name="sml-x.stationary_location">
      <a:documentation>Stationary Location</a:documentation> 
      <choice>
         <ref name="sml-x.xyzLocationVector"/>
         <ref name="sml-x.gpsLocationVector"/>
      </choice>
   </define>
   

   <!-- stationary position -->
   <define name="sml-x.stationary_position">
      <a:documentation>Stationary Position</a:documentation> 
      <element name="swe:DataRecord">
         <optional>
            <attribute name="definition">
               <choice>
                  <value>http://sensorml.com/ont/swe/property/SensorPosition</value>
                  <value>http://sensorml.com/ont/swe/property/PlatformPosition</value>
                  <value>http://sensorml.com/ont/swe/property/Position</value>
               </choice>
            </attribute>
         </optional>
         <element name="label">
            <data type="string"/>
         </element>

         <element name="swe:field">
            <ref name="sml-x.stationary_location"/>
         </element>
         <element name="swe:field">
            <ref name="sml-x.xyzOrientationVector"/>
         </element>
      </element>
   </define>



<!-- COORDINATES / VECTORS  -->
   
   <!-- GML Point -->
   <define name="sml-x.gmlPoint">
      <a:documentation>GML Point Location</a:documentation>
      <element name="gml:Point">
         <attribute name="gml:id">
            <data type="token"/>
         </attribute>
         <attribute name="srsName">
            <value>
               http://www.opengis.net/def/crs/EPSG/0/4326
            </value>
         </attribute>
         <element name="gml:coordinates">
            <!-- NOTE: configure this for 2-3 decimals -->
            <data type="string"/>
         </element>
      </element>
   </define>   
    
 <!-- xyz Location Vector -->  
 <define name="sml-x.xyzLocationVector">  
    <a:documentation>XYZ Location Vector</a:documentation> 
    <element name="swe:Vector">
      <optional>
         <attribute name="id">
            <data type="ID"/>
         </attribute>
      </optional>
      <attribute name="definition">
         <choice>
            <value>http://sensorml.com/ont/swe/property/SensorLocation</value>
            <value>http://sensorml.com/ont/swe/property/PlatformLocation</value>
            <value>http://sensorml.com/ont/swe/property/TargetLocation</value>
            <value>http://sensorml.com/ont/swe/property/Location</value>
         </choice>
      </attribute>
      <attribute name="referenceFrame">
         <data type="anyURI"/>
      </attribute>
      <optional>
         <attribute name="localFrame">
            <data type="anyURI"/>
         </attribute>
      </optional>
      <element name="sml:label">
         <data type="string"/>
      </element>
      <optional>
         <element name="sml:description">
            <data type="string"/>
         </element>
      </optional>
      <!-- x coordinate -->
      <element name="swe:coordinate">
         <attribute name="name">
            <value>x</value>
         </attribute>
         <attribute name="axisID">
            <value>x</value>
         </attribute>
         <attribute name="definition">
            <value>http://sensorml/ont/swe/position/X-Location</value>
         </attribute>
         <element name="uom">
            <attribute name="code">
               <value>m</value>
            </attribute>
         </element>
         <element name="swe:value">
            <data type="double"/>
         </element>
      </element>  
      <!-- y coordinate -->
      <element name="swe:coordinate">
         <attribute name="name">
            <value>y</value>
         </attribute>
         <attribute name="axisID">
            <value>y</value>
         </attribute>
         <attribute name="definition">
            <value>http://sensorml/ont/swe/position/Y-Location</value>
         </attribute>
         <element name="uom">
            <attribute name="code">
               <value>m</value>
            </attribute>
         </element>
         <element name="swe:value">
            <data type="double"/>
         </element>
      </element>  
      <!-- z coordinate -->
      <element name="swe:coordinate">
         <attribute name="name">
            <value>z</value>
         </attribute>
         <attribute name="axisID">
            <value>z</value>
         </attribute>
         <attribute name="definition">
            <value>http://sensorml/ont/swe/position/Z-Location</value>
         </attribute>
         <element name="uom">
            <attribute name="code">
               <value>m</value>
            </attribute>
         </element>
         <element name="swe:value">
            <data type="double"/>
         </element>
      </element>  
   </element>
  </define> 


   <!-- GPS Location Vector -->  
   <define name="sml-x.gpsLocationVector">  
      <a:documentation>GPS Location Vector</a:documentation> 
      <element name="swe:Vector">
         <optional>
            <attribute name="id">
               <data type="ID"/>
            </attribute>
         </optional>
         <attribute name="definition">
            <choice>
               <value>http://sensorml.com/ont/swe/property/SensorLocation</value>
               <value>http://sensorml.com/ont/swe/property/PlatformLocation</value>
               <value>http://sensorml.com/ont/swe/property/TargetLocation</value>
               <value>http://sensorml.com/ont/swe/property/Location</value>
            </choice>
         </attribute>
         <attribute name="referenceFrame">
            <value>http://www.opengis.net/def/crs/EPSG/6.7/4979</value>
         </attribute>
         <optional>
            <attribute name="localFrame">
               <data type="anyURI"/>
            </attribute>
         </optional>
         <element name="sml:label">
            <data type="string"/>
         </element>
         <optional>
            <element name="sml:description">
               <data type="string"/>
            </element>
         </optional>
         <!-- x coordinate -->
         <element name="swe:coordinate">
            <attribute name="name">
               <value>longitude</value>
            </attribute>
            <attribute name="axisID">
               <value>lon</value>
            </attribute>
            <attribute name="definition">
               <value>http://sensorml/ont/swe/position/Longitude</value>
            </attribute>
            <element name="uom">
               <attribute name="code">
                  <value>deg</value>
               </attribute>
            </element>
            <element name="swe:value">
               <data type="double"/>
            </element>
         </element>  
         <!-- y coordinate -->
         <element name="swe:coordinate">
            <attribute name="name">
               <value>latitude</value>
            </attribute>
            <attribute name="axisID">
               <value>lat</value>
            </attribute>
            <attribute name="definition">
               <value>http://sensorml/ont/swe/position/Latitude</value>
            </attribute>
            <element name="uom">
               <attribute name="code">
                  <value>deg</value>
               </attribute>
            </element>
            <element name="swe:value">
               <data type="double"/>
            </element>
         </element>  
         <!-- z coordinate -->
         <element name="swe:coordinate">
            <attribute name="name">
               <value>altitude</value>
            </attribute>
            <attribute name="axisID">
               <value>alt</value>
            </attribute>
            <attribute name="definition">
               <value>http://sensorml/ont/swe/position/Altitude</value>
            </attribute>
            <element name="uom">
               <attribute name="code">
                  <value>m</value>
               </attribute>
            </element>
            <element name="swe:value">
               <data type="double"/>
            </element>
         </element>  
      </element>
   </define> 
   

