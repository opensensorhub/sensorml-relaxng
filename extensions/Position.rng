   <!--=============-->
   <!-- Physical DataComponent attributes -->
   <!--=============-->
   <define name="sml-x.PhysicalDataInfo">
      <!-- attributes -->
      <optional>
         <attribute name="definition">
            <data type="anyURI"/>
         </attribute>
      </optional>
      <!--     <optional>
         <attribute name="optional">
         <data type="boolean"/>
         </attribute>
         </optional>
         <optional>
         <attribute name="updatable">
         <data type="boolean"/>
         </attribute>
         </optional>  -->
      <optional>
         <attribute name="referenceFrame">
            <data type="anyURI"/>
         </attribute>
      </optional>
      <optional>
         <attribute name="localFrame">
            <data type="anyURI"/>
         </attribute>
      </optional>
      <optional>
         <attribute name="axisID">
            <data type="token"/>
         </attribute>
      </optional>
      <!-- AbstractSWEIdentifiable Properties -->
      <optional>
         <attribute name="id">
            <data type="ID"/>
         </attribute>
      </optional>
      <!--      <optional>
         <element name="swe:identifier">
         <data type="anyURI"/>
         </element>
         </optional>  -->
      <!--      <optional>  -->
      <element name="swe:label">
         <data type="token">
            <param name="minLength">1</param>
         </data>
      </element>
      <!--       </optional>  -->
      <optional>
         <element name="swe:description">
            <data type="string">
               <param name="minLength">1</param>
            </data>
         </element>
      </optional>
   </define>
   
   
